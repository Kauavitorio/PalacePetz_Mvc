<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PalacePetz</title>

    @Styles.Render("~/Content/css")
    <!-- Main CSS -->
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/Home/home.css">
    <!-- ICON -->
    <link rel="shortcut icon" href="https://www.kauavitorio.com/host-itens/logoPalacePetzMVC.png" type="image/x-icon" />
    <!-- Header CSS -->
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/header/header.css">
</head>
<body>
    <header id="menu">
        <ul id="menu2">
            <li><img src="https://www.kauavitorio.com/palacepetz/Home/Menu/icon_main.png" class="logo"></li>
            <li><a href="/" style="text-decoration: none; color: var(--white)" id="loc" alt="">home</a></li>
            <li><a href="/produtos" style="text-decoration: none; color: var(--white)" alt="">produtos</a></li>
            <li><a href="/servicos" alt="" style="text-decoration: none; color: var(--white)">serviços</a></li>
            <li><a onclick="SeeMyOrders()" id="SeeMyOrders" alt="" style="text-decoration: none; color: var(--white)">pedidos</a></li>
            <li><a onclick="LogoutOrLogin()" id="LogoutOrLogin" alt="" style="text-decoration: none; color: var(--white)">sair</a></li>
            <li>
                <a onclick="SeeMyCart()" id="SeeMyCart"><img src="https://www.kauavitorio.com/palacepetz/Home/Menu/shopping-cart.png" class="car"></a>
                <span class='badge badge-warning' id='lblCartCount'>@ViewBag.cartsize</span>
            </li>
            <li><a onclick="SeeMyProfile()" id="SeeMyProfile"><img src="@ViewBag.img_user" class="user"></a></li>
        </ul>
    </header>
    <section class="a">
        <div class="main_container">
            <div class="texts">
                <h1 class="first1" style="font-size: 38px; text-transform: uppercase; margin-top: -1%;">
                    melhor ração<br />
                    você encontra aqui.
                </h1>
                <h2 class="first2" style="font-size: 25px; margin-top: 8%;">Na Palace você encontra alimento de qualidade.</h2>

                <h1 style="font-size: 38px; text-transform: uppercase; margin-top: -1%;">
                    cuide do seu pet<br />
                    com carinho.
                </h1>
                <h2 style="font-size: 25px; margin-top: 8%;">Venha encontrar o medicamento para seu Pet.</h2>

                <h1 style="font-size: 38px; text-transform: uppercase; margin-top: -1%;">
                    seu pet com o máximo de<br />
                    estilo você encontra aqui.
                </h1>
                <h2 style="font-size: 25px; margin-top: 8%;">Encontre os melhores acessórios na PalacePetz.</h2>

                <h1 style="font-size: 38px; text-transform: uppercase; margin-top: -1%;">
                    deixe seu pet limpinho<br />
                    máximo de estilo.
                </h1>
                <h2 style="font-size: 25px; margin-top: 8%;">Encontre produtos de estética para seu Pet aqui.</h2>
            </div>
            <input onclick="GoToProducts()" type="submit" value="ver produtos" style="cursor: pointer;" class="prod_button">
            <div class="sliders">
                <img class="selected" src="https://www.kauavitorio.com/palacepetz/Home/Banner/img-banner-one.png" style="width: 39%; margin: -4% 0 0 34%; /* topo | direita | inferior | esquerda */">
                <img src="https://www.kauavitorio.com/palacepetz/Home/Banner/img-banner-two.png" style="width: 32%; margin: -6% 0 0 33%; /* topo | direita | inferior | esquerda */">
                <img src="https://www.kauavitorio.com/palacepetz/Home/Banner/img-banner-tree.png" style="width: 33%; margin: -3% 0 0 34%; /* topo | direita | inferior | esquerda */">
                <img src="https://www.kauavitorio.com/palacepetz/Home/Banner/img-banner-four.png" style="width: 42%; margin: -3% 0 0 33%; /* topo | direita | inferior | esquerda */">
            </div>
            <div style="background: linear-gradient(120deg, #FF94A1 0%, #FACCD6 100%)" class="circle circleFirst"></div>
            <div style="background: linear-gradient(120deg, #FFF098 0%, #FFF098 100%)" class="circle"></div>
            <div style="background: linear-gradient(120deg, #88D6FF 0%, #44BFFF 100%)" class="circle"></div>
            <div style="background: linear-gradient(120deg, #F9B876 0%, #FCCD92 100%)" class="circle"></div>
        </div>
        <div class="destaque">
            <h2 style="font-family: 'Segoe UI'; color: var(--text); font-size: 25px; text-transform: uppercase; margin: 10% 0 0 6%;">Produtos em destaque</h2>
            @foreach (var item in Model)
            {
        <h4 id="checkUserId" style="display: none;">@Html.DisplayFor(modelItem => item.id_user)</h4>
        <div class="box-destaque col-lg-3 col-md-6 mb-4" style="margin: 2% 3%">
            @{
                switch (item.nm_category)
                {
                    case "Alimentos":
                        <a href="/detalhes/@Html.DisplayFor(modelItem => item.cd_prod)" title="@Html.DisplayFor(modelItem => item.nm_product)" class="section_item" style="text-align: center; text-decoration: none; background-image: linear-gradient(45deg, #FF94A1 0%, #FACCD6 100%);">
                            <div class="itens">
                                <img style="width: 130px; height: 130px;" src="@Html.DisplayFor(modelItem => item.image_prod)">
                                <h3 style="margin-bottom: 20%; margin-top: 15%; font-weight: 600;">@Html.DisplayFor(modelItem => item.nm_product)</h3>
                                <h4 style="align-items: center; font: bold 16pt Segoe UI; font-weight: 700; color: var(--text);">R$ @Html.DisplayFor(modelItem => item.product_price)</h4>
                            </div>
                        </a>

                        break;
                    case "Acessórios":
                        <a href="/detalhes/@Html.DisplayFor(modelItem => item.cd_prod)" title="@Html.DisplayFor(modelItem => item.nm_product)" class="section_item" style="text-align: center; text-decoration: none; background-image: linear-gradient(45deg, #88D6FF 0%, #44BFFF 100%);">
                            <div class="itens">
                                <img style="width: 130px; height: 130px;" src="@Html.DisplayFor(modelItem => item.image_prod)">
                                <h3 style="margin-bottom: 20%; margin-top: 15%; font-weight: 600;">@Html.DisplayFor(modelItem => item.nm_product)</h3>
                                <h4 style="align-items: center; font: bold 16pt Segoe UI; font-weight: 700; color: var(--text);">R$ @Html.DisplayFor(modelItem => item.product_price)</h4>
                            </div>
                        </a>

                        break;
                    case "Medicamentos":

                        <a href="/detalhes/@Html.DisplayFor(modelItem => item.cd_prod)" title="@Html.DisplayFor(modelItem => item.nm_product)" class="section_item" style="text-align: center; text-decoration: none; background-image: linear-gradient(45deg, #F0DD76 0%, #FFF098 100%);)">
                            <div class="itens">
                                <img style="width: 130px; height: 130px;" src="@Html.DisplayFor(modelItem => item.image_prod)">
                                <h3 style="margin-bottom: 20%; margin-top: 15%; font-weight: 600;">@Html.DisplayFor(modelItem => item.nm_product)</h3>
                                <h4 style="align-items: center; font: bold 16pt Segoe UI; font-weight: 700; color: var(--text);">R$ @Html.DisplayFor(modelItem => item.product_price)</h4>
                            </div>
                        </a>

                        break;
                    case "Estética":
                        <a href="/detalhes/@Html.DisplayFor(modelItem => item.cd_prod)" title="@Html.DisplayFor(modelItem => item.nm_product)" class="section_item" style="text-align: center; text-decoration: none; background-image: linear-gradient(45deg, #6ADFD6 0%, #51E6B7 100%);">
                            <div class="itens">
                                <img style="width: 130px; height: 130px;" src="@Html.DisplayFor(modelItem => item.image_prod)">
                                <h3 style="margin-bottom: 20%; margin-top: 15%; font-weight: 600;">@Html.DisplayFor(modelItem => item.nm_product)</h3>
                                <h4 style="align-items: center; font: bold 16pt Segoe UI; font-weight: 700; color: var(--text);">R$ @Html.DisplayFor(modelItem => item.product_price)</h4>
                            </div>
                        </a>
                        break;
                }
                <div class="border-destaque" style="height: 160px;"></div>
            }
        </div>

            }
        </div>
    </section>
    <script language="javascript" type="text/javascript">
        function fireServerButtonEvent() {
            document.getElementById("btnSubmit").click();
        }
        function GoToProducts() {
            window.open("/produtos", '_self');
        }
    </script>
    <!---<script src="http://127.0.0.1:5501/public/palacepetz/Home/script.js"></script>-->
    <script src="https://www.kauavitorio.com/palacepetz/Home/script.js"></script>
</body>
</html>