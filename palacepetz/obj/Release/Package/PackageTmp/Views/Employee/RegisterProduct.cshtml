@model palacepetz.Models.products.DtoProduct

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Produtos - PalacePetz</title>
    <link rel="shortcut icon" href="https://www.kauavitorio.com/host-itens/logoPalacePetzMVC.png" type="image/x-icon">
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/Funcionario/Produtos/Cadastrar_Produto/Cadastrar_Produto.css">
</head>
<body>
     <nav id="menu">
        <ul id="menu2">
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/logo.png" style="width: 8rem" class="logo"></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/home.png" alt=""><a href="/funcionario" alt="" style="text-decoration:none">home</a></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/veterinario.png" alt=""><a href="/funcionario/servicos" alt="" style="text-decoration:none">Serviços</a></li>
            @if (@ViewBag.type_user == 3)
            {
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/employee.png" alt=""><a href="/gerente/funcionarios" alt="" style="text-decoration:none">Funcionários</a></li>
            }
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/users.png" alt=""><a href="/clientes" alt="" style="text-decoration:none">clientes</a></li>
            <li  id="loc"><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/products.png" alt=""><a href="/funcionario/funcoes/produtos" alt="" style="text-decoration:none">produtos</a></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/stats.png" alt=""><a href="/empresa/estatisticas" alt="" style="text-decoration:none">relatório</a></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/pedidos.png" alt=""><a href="/funcionario/pedidos" alt="" style="text-decoration:none">pedidos</a></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/info.png" alt=""><a href="/funcionario/informacoes" alt="" style="text-decoration:none">informações</a></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/logout.png" alt=""><a href="/logout/1" alt="" style="text-decoration:none">sair</a></li>
        </ul>
    </nav>
    <section>
        <div class="container">
        @using (Html.BeginForm("RegisterProduct", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="container_text">
                <h1 class="text_title">CADASTRAR PRODUTO</h1>
                <a href="/funcionario/produtos" class="text_link">Consultar Produtos</a>
            </div>
            <div class="container_box">
                <div class="column_one">
                    @Html.DropDownList("category", new List<SelectListItem>
                    {
                       new SelectListItem{ Text="Selecione a categoria", Value = "999" },
                       new SelectListItem{ Text="Alimentos", Value = "4" },
                       new SelectListItem{ Text="Medicamentos", Value = "14" },
                       new SelectListItem{ Text="Acessórios", Value = "24" },
                       new SelectListItem{ Text="Estética", Value = "34" }
                    }, new { @class = "field" })
                    @Html.EditorFor(model => model.nm_product, new { htmlAttributes = new { @class = "field", @placeholder = "Nome do produto" } })

                    @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "field", @placeholder = "Quantidade" } })
                    @Html.DropDownList("species", new List<SelectListItem>
                    {
                       new SelectListItem{ Text="Cachorros", Value = "Dogs" },
                       new SelectListItem{ Text="Gatos", Value = "Cats" },
                       new SelectListItem{ Text="Pássaros", Value = "Birds" },
                       new SelectListItem{ Text="Coelhos", Value = "Rabbit" },
                       new SelectListItem{ Text="Peixes", Value = "Fish" },
                       new SelectListItem{ Text="Hamster", Value = "Hamster" }
                    }, new { @class = "field" })
                </div>
                <div class="column_two">
                    @Html.EditorFor(model => model.product_price, new { htmlAttributes = new { @class = "field", @placeholder="Preço do produto" } })

                    @Html.TextAreaFor(model => model.description, new {  @class = "field area", @cols="30", @rows="10", @placeholder="Descrição do produto..." })

                    @Html.EditorFor(model => model.shelf_life, new { htmlAttributes = new { @class = "field", @id="shelf_life", @placeholder="Data de validade" } })
                </div>
            </div>
                <h3>@ViewBag.statusInsert</h3>
            <div class="column_button">
                <input type="submit" value="CADASTRAR PRODUTO" class="button_prod">
                @Html.EditorFor(model => model.file, new { htmlAttributes = new { @class = "button_img", @type = "file", @style="margin-left: 7.4%;", @value="FAZER UPLOAD DA IMAGEM" } })
            </div>
        }
        </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://digitalbush.com/wp-content/uploads/2014/10/jquery.maskedinput.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <script>
        $(document).ready(function () {
            var shelf_life = $("#shelf_life");
            shelf_life.mask('00/00/0000', { reverse: false });
        });
    </script>
</body>
</html>
