@model IEnumerable<palacepetz.Models.User.DtoOrders>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus Pedidos - PalacePetz</title>
    <link rel="shortcut icon" href="https://www.kauavitorio.com/host-itens/logoPalacePetzMVC.png" type="image/x-icon">
    <!-- Header CSS -->
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/header/header.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/Meus_Pedidos/MeusPedidos.css">
</head>
<body>
    <header id="menu">
        <ul id="menu2">
            <li><img src="https://www.kauavitorio.com/palacepetz/Home/Menu/icon_main.png" class="logo"></li>
            <li><a href="/" style="text-decoration: none; color: var(--white)" alt="">home</a></li>
            <li><a href="/produtos" style="text-decoration: none; color: var(--white)" alt="">produtos</a></li>
            <li><a href="/servicos" alt="" style="text-decoration: none; color: var(--white)">serviços</a></li>
            <li><a href="/meus-pedidos" id="loc" alt="" style="text-decoration: none; color: var(--white)">pedidos</a></li>
            <li><a href="/logout/1" id="LogoutOrLogin" alt="" style="text-decoration: none; color: var(--white)">sair</a></li>
            <li>
                 <a href="/meu-carrinho"><img src="https://www.kauavitorio.com/palacepetz/Home/Menu/shopping-cart.png" class="car"></a>
                <span class='badge badge-warning' id='lblCartCount'>@ViewBag.cartsize</span>
            </li>
           <li><a href="/perfil"><img src="@ViewBag.img_user" class="user"></a></li>
        </ul>
    </header>
    <section>
        <h2 class="title">Meus Pedidos</h2>
        <main>
            @foreach (var item in Model)
            {
                if (item != null)
                {
                    <div class="box">
                        <table>
                            <tr>
                                <td class="text_title">Pedido:</td>
                                <td class="text_title">Realizado em: </td>
                                <td class="text_title">Pagamento:</td>
                                <td class="text_title">Status:</td>
                            </tr>
                            <tr>
                                <td class="text_result">@Html.DisplayFor(model => item.cd_order)</td>
                                <td class="text_result">@Html.DisplayFor(model => item.date_order)</td>
                                <td class="text_result">@Html.DisplayFor(model => item.payment)</td>
                                <td class="text_result">@Html.DisplayFor(model => item.status)</td>
                            </tr>
                            @if (item.status != "Aguardando Aprovação")
                            {
                                <a href="/pedido/@Html.DisplayFor(model => item.cd_order)" class="btn_AcompanhaPedido">Acompanhar Pedido</a>
                            }
                        </table>
                    </div>
                }
            }
        </main>
    </section>
</body>
</html>