@model palacepetz.Models.User.DtoUser
@{
    ViewBag.Title = "Login - PalacePetz";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:locale" content="en-us">
    <meta property="og:url" content="http://palacepetz.azurewebsites.net/">
    <meta property="og:title" content="PalacePetz - Login">
    <meta property="og:site_name" content="PalacePetz">
    <meta property="og:description" content="PetShop">
    <meta property="og:image" content="https://cdn.discordapp.com/attachments/835238751176753232/839638176133021696/dog1.jpg">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="800px">
    <meta property="og:image:height" content="700px">
    <meta property="og:type" content="website">
    <title>Login - PalacePetz</title>
    @Styles.Render("~/Content/login/login.css")
    <link rel="shortcut icon" href="https://www.kauavitorio.com/host-itens/logoPalacePetzMVC.png" type="image/x-icon" />
    <!--<link rel="stylesheet" href="http://127.0.0.1:5501/public/palacepetz/login/login.css" /> -->
</head>
<body>
    <section>
        @using (Html.BeginForm())
        {
        <div>
            <div class="user Func">
                <div class="imgBox"><img src="https://cdn.discordapp.com/attachments/835238751176753232/839638176133021696/dog1.jpg" alt="" id="img"></div>
                <div class="formBox">
                    <form>
                        <h2 id="text-title">LOGIN</h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group" style="margin-bottom: 5%">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "Endereço de email", @class = "field",  @onclick="hiddenTextDanger()" } })
                                @Html.ValidationMessageFor(model => model.name_user, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 0%">
                            <div class="col-md-10">
                                @Html.PasswordFor(model => model.password, new { placeholder = "Senha de Usuário", @class = "field",  @onclick= "hiddenTextDanger()" })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger"  })
                            </div>
                        </div>
                        <div class="form-group" style="justify-content: center; display:flex;">
                            <div class="col-md-offset-2 col-md-10">
                                <h3 class="text-danger" id="alert">@ViewBag.statusLogin</h3>
                                <input type="submit" value="Entrar" class="btn" onclick="EntrarUser()" />
                            </div>
                        </div>
                        <p class="signup"><a href="#" onclick=""> Esqueceu a senha? Recupere.</a></p>
                        <p class="signup"><a href="../Criar_Conta/CriarConta.html" onclick="toggleFormCriaConta();"> Criar Conta.</a></p>
                </form>
            </div>
        </div>
         </div>
        }
    </section>

    <script>

        function hiddenTextDanger() {
            document.getElementById("alert").style.display = "none";
        }

    </script>
</body>
</html> 


