
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - PalacePetz</title>
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/Funcionario/Home/Home.css">
    <link rel="shortcut icon" href="https://www.kauavitorio.com/host-itens/logoPalacePetzMVC.png" type="image/x-icon">
</head>
<body>
    <nav id="menu">
        <ul id="menu2">
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/logo.png" style="width: 8rem" class="logo"></li>
            <li id="loc"><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/home.png" alt=""><a href="/funcionario" alt="" style="text-decoration:none">home</a></li>
            @if (@ViewBag.type_user == 1 || @ViewBag.type_user == 3)
            {
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/veterinario.png" alt=""><a href="/funcionario/servicos" alt="" style="text-decoration:none">Serviços</a></li>
                if (@ViewBag.type_user == 3)
                {
                    <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/employee.png" alt=""><a href="/gerente/funcionarios" alt="" style="text-decoration:none">Funcionários</a></li>
                }
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/users.png" alt=""><a href="/clientes" alt="" style="text-decoration:none">clientes</a></li>
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/products.png" alt=""><a href="/funcionario/funcoes/produtos" alt="" style="text-decoration:none">produtos</a></li>
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/stats.png" alt=""><a href="/empresa/estatisticas" alt="" style="text-decoration:none">relatório</a></li>
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/pedidos.png" alt=""><a href="/funcionario/pedidos" alt="" style="text-decoration:none">pedidos</a></li>
            }
            else
            {
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/veterinario.png" alt=""><a href="/funcionario/servicos" alt="" style="text-decoration:none">Consultas</a></li>
                <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/stats.png" alt=""><a href="/empresa/estatisticas" alt="" style="text-decoration:none">relatório</a></li>
            }

            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/info.png" alt=""><a href="/funcionario/informacoes" alt="" style="text-decoration:none">informações</a></li>
            <li><img src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/navbar/logout.png" alt=""><a href="/logout/1" alt="" style="text-decoration:none">sair</a></li>
        </ul>
    </nav>
    <section style="height: 95vh;">
        <div class="column_one">
            <div class="container_one">
                <div class="container_text">
                    <h2 class="title_box">Estatísticas</h2>
                    <h3 class="text_box">Veja suas vendas<br /> de forma eficaz.</h3><br>
                    <a class="button_stats" href="/empresa/estatisticas">Vamos Lá</a>
                </div>
                <div class="img">
                    <img class="img_stats" src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/shortcuts/aumentar.png" alt="">
                </div>
            </div>
            <div class="container_two">
                @if (@ViewBag.type_user == 2)
                {
                    <div class="box_one">
                        <img class="img_products" src="https://cdn.discordapp.com/attachments/707671310104526863/859121115955724338/bicho-de-estimacao.png" alt=""><br>
                        <a class="button_product" href="/funcionario/servicos">Minhas Consultas</a>
                    </div>
                }
                else
                {
                    <div class="box_one">
                        <img class="img_products" src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/shortcuts/pet-shop.png" alt=""><br>
                        <a class="button_product" href="/funcionario/produtos">Consultar Produtos</a>
                    </div>
                }
                <div class="box_two">
                    <img class="img_forn" src="https://www.kauavitorio.com/palacepetz/Funcionario/Home/shortcuts/caminhao-de-entrega.png" alt=""><br>
                    <a class="button_forn" href="/funcionario/fornecedores">Ver Fornecedores</a>
                </div>
            </div>
        </div>
        <div class="column_two">
            <div class="profile_user">
                <img class="img_profile" src="@ViewBag.img_user" alt=""><br>
                <h2 class="title_profile">@ViewBag.Name</h2><br><br>
                <div class="container_profile">
                    <div class="container_result">
                        <h4 class="text_profile">Cargo:</h4>
                        <h3 class="result_profile">@ViewBag.Role</h3>
                    </div>
                    <div class="container_result">
                        <h4 class="text_profile">CPF:</h4>
                        <h3 class="result_profile">@ViewBag.CPF</h3>
                    </div>
                    <div class="container_result">
                        <h4 class="text_profile">Endereço:</h4>
                        <h3 class="result_profile">@ViewBag.Address</h3>
                    </div>
                    <div class="container_result">
                        <h4 class="text_profile">Telefone:</h4>
                        <h3 class="result_profile">@ViewBag.Phone</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>