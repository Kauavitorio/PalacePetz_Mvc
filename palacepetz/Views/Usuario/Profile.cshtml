
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil - PalacePetz</title>
    <link rel="shortcut icon" href="https://www.kauavitorio.com/host-itens/logoPalacePetzMVC.png" type="image/x-icon">
    <!-- Header CSS -->
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/header/header.css">
    <link rel="stylesheet" href="https://www.kauavitorio.com/palacepetz/Editar_Perfil/Profile.css">
</head>
<body>
    <header id="menu">
        <ul id="menu2">
            <li><img src="https://www.kauavitorio.com/palacepetz/home/Menu/icon_main.png" class="logo"></li>
            <li><a href="/" style="text-decoration: none; color: var(--white)" alt="">home</a></li>
            <li><a href="/produtos" style="text-decoration: none; color: var(--white)" alt="">produtos</a></li>
            <li><a href="/servicos" alt="" style="text-decoration: none; color: var(--white)">serviços</a></li>
            <li><a href="/meus-pedidos" alt="" style="text-decoration: none; color: var(--white)">pedidos</a></li>
            <li><a href="/logout/1" alt="" style="text-decoration: none; color: var(--white)">sair</a></li>
            <li>
                <a href="/meu-carrinho"><img src="https://www.kauavitorio.com/palacepetz/home/Menu/shopping-cart.png" class="car"></a>
                <span class='badge badge-warning' id='lblCartCount'>@ViewBag.cartsize</span>
            </li>
            <li><a href="/perfil"><img src="@ViewBag.img_user" class="user"></a></li>
        </ul>
    </header>
    <section>
        <a href="/"><div class="back"><img src="https://www.kauavitorio.com/palacepetz/Editar_Perfil/back.png" alt="" class="img_back"></div></a>
        <h2 class="title">Perfil</h2>
        <div class="box">
            <div class="container_img">
                <img src="@ViewBag.img_user" class="user" style="width: 500px; height:100px">
            </div>
            <div class="form">
                <div class="colunm_one">

                    <input type="text" class="field" disabled value="@ViewBag.Firstname_user" /><br>

                    <input type="text" class="field" disabled value="@ViewBag.Lastname_user" /><br>

                    <input type="text" class="field" disabled value="@ViewBag.cpf_user" />

                </div>
                <div class="colunm_two">

                    <input type="text" class="field" disabled value="@ViewBag.zipcode" /><br>

                    <input type="text" class="field" disabled value="@ViewBag.address_user" /><br>

                    <input type="text" class="field" disabled value="@ViewBag.complement" />

                </div>
            </div>
            <div class="container_button">
                <a href="/editar-perfil" style="text-decoration:none; color: #fff;" class="btnEdit">Editar Perfil</a>
            </div>
        </div>
    </section>
    <script src="https://www.kauavitorio.com/palacepetz/header/header.js"></script>
</body>
</html>
